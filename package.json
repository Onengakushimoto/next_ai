{
  "name": "i18n-next-static",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn i18n && next dev",
    "build": "yarn i18n && next build",
    "start": "next start",
    "i18n": "node ./lib/builder.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "next": "9.1.4",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "husky": "3.1.0",
    "jest": "24.9.0",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "@testing-library/react": "9.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "jest": {
    "roots": ["<rootDir>/lib"],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
